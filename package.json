{
  "name": "mini-player",
  "version": "0.0.1",
  "author": "Youngjin Kwak",
  "description": "Create your personal manager",
  "private": "true",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:build": "tsc -p src/main/tsconfig.json",
    "electron:dev": "yarn electron:build && concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "electron:builder-publish": "electron-builder --publish=always",
    "build:for:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "app:build": "yarn electron:build && yarn build:for:electron && yarn electron:builder",
    "app:publish": "yarn electron:build && yarn build:for:electron && yarn electron:builder-publish"
  },
  "build": {
    "appId": "com.my-website.mini-player",
    "productName": "Mini player",
    "copyright": "Copyright Â© 2021 ${author}",
    "publish": [
      {
        "provider": "github",
        "owner": "kkan0615",
        "repo": "my-personal-manger"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        "zip",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "src/main/**/*"
    ],
    "extraResources": [
      {
        "from": "./src/main/default/",
        "to": "default",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "vue": "^3.2.23"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.10.2",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "typescript": "^4.4.4",
    "vite": "^2.7.0",
    "vue-tsc": "^0.28.10",
    "wait-on": "^6.0.0",
    "eslint": "^8.1.0",
    "eslint-plugin-vue": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "@vue/eslint-config-typescript": "^9.0.0",
    "vue-i18n": "^9.2.0-beta.20",
    "vue-router": "4",
    "vuex": "^4.0.2"
  }
}
