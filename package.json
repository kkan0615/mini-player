{
  "name": "mini-player",
  "author": "Youngin Kwak",
  "private": true,
  "version": "1.0.1",
  "main": "./dist/main/main.cjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node scripts/devServer.ts",
    "build:renderer": "vue-tsc -p packages/renderer/vite.config.ts --noEmit && vite build packages/renderer",
    "build:preload": "tsc -p packages/preload/vite.config.ts --noEmit && vite build packages/preload",
    "build:main": "tsc -p packages/main/vite.config.ts --noEmit && vite build packages/main",
    "build:test": "yarn build:renderer && yarn build:preload && yarn build:main",
    "build": "ts-node scripts/build.ts && electron-builder",
    "start": "electron .",
    "dev:renderer": "vite packages/renderer",
    "app:build": "cross-env ELECTRON=true && yarn build && yarn electron:build && electron-builder",
    "app:publish": "yarn electron:build && yarn build:for:electron && yarn electron:builder-publish"
  },
  "build": {
    "appId": "com.my-website.mini-player",
    "productName": "mini-player",
    "copyright": "Copyright Â© 2022 ${author}",
    "publish": [
      {
        "provider": "github",
        "owner": "kkan0615",
        "repo": "mini-player"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        "zip",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^17.0.41",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "eslint": "^8.17.0",
    "eslint-plugin-vue": "^9.1.0",
    "ts-node": "^10.8.2",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vue-tsc": "^0.34.7"
  }
}
