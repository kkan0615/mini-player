{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "outDir": "../../dist/app"
  },
  "exclude": ["node_modules", "../src/renderer/**/*"],
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
  ],
}
